{
    "compilerOptions": {
        "target": "ESNext",
        "types": ["vitest/globals"],
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        },
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true
    },
    "include": ["src/**/*"]
}